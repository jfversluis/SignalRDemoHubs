<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignalRDemoMauiClient.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="User"/>
            <Entry x:Name="username" Placeholder="Your name .." />
            
            <Label Text="Message"/>
            <Entry x:Name="message" Placeholder="Your message .." />

            <Button
                x:Name="sendBtn"
                Text="Send"
                Clicked="sendBtn_Clicked"
                HorizontalOptions="Center" />

            <Label x:Name="messages"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
